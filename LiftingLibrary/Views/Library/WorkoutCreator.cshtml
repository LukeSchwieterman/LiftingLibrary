@model LiftingLibrary.Models.CreatedWorkout


<!-- Link CSS files -->
<link rel="stylesheet" href="~/css/workout.css" asp-append-version="true" />

<div class="container">
    <form id="createWorkoutForm" method="post" asp-controller="Workouts" asp-action="CreateWorkout" class="workout-form-container">
        <div class="form-group">
            <label for="date" class="form-label">Date:</label>
            <input type="date" name="date" id="date" class="form-control" required />
        </div>

        <div class="form-group">
            <label for="notes" class="form-label">Notes:</label>
            <input type="text" name="notes" id="notes" class="form-control" placeholder="Enter workout notes" />
        </div>

        <button type="submit" class="btn btn-primary">Create Workout</button>
    </form>
</div>